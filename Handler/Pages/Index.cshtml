@page
@model IndexModel
@{
    Layout = "Shared/_Layout";
    ViewData["Title"] = "Handler Web App";
}

@*<meta http-equiv="refresh" content="15">*@

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/datatables.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
}

@section menu {
    <div class="btn-group" role="group">
        <form method="post">
            <input class="btn btn-primary" type="submit" value="Home" asp-page="/Index" />
            <input class="btn btn-secondary" type="submit" value="Start" asp-page-handler="StartButton" />
            <input class="btn btn-secondary" type="submit" value="Stop" asp-page-handler="StopButton" />
            <input class="btn btn-secondary" type="submit" value="History" asp-page-handler="HistoryButton" />
        </form>
    </div>
}

<div class="center">
    @*@await Html.PartialAsync("_JobGrid.cshtml", Model)*@
    <table id="jobGrid" class="stripe ui celled table" style="width:100%">
        <thead class="btn-primary">
            <tr>
                <th>Job</th>
                <th>Status</th>
                <th>Time Received</th>
                <th>Time Started</th>
                <th>Time Completed</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.statusData != null)
            {
                @foreach (var status in Model.statusData)
                {
                <tr>
                    <td>@status.Job</td>
                    <td>@status.JobStatus</td>

                    @if (@status.TimeReceived.Year > 1) {
                    <td>@status.TimeReceived</td>
                    } else {
                    <td> </td>
                    }

                    @if (@status.TimeStarted.Year > 1) {
                    <td>@status.TimeStarted</td>
                    } else {
                    <td> </td>
                    }

                    @if (@status.TimeCompleted.Year > 1) {
                    <td>@status.TimeCompleted</td>
                    } else  {
                    <td> </td>
                    }
                </tr>
                }
            }
        </tbody>
    </table>
</div>

<script>
    $(document).ready(function () {
        $('#jobGrid').dataTable({
            fixedHeader: true
        });
    });
</script>